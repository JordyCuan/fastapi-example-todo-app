{
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.venv/*/**": true,
        "**/*.pyc": {
            "when": ".py"
        },
        "**/package-lock.json": true,
        "**/poetry.lock": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.venv/*/**": true,
        "**/dist/*/**": true,
        "**/node_modules/*/**": true,
        "**/venv/*/**": true,
    },
    "[python]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        }
    },
    "editor.rulers": [
        116,
        120
    ],
    "python.formatting.provider": "black",
    "python.linting.pylintArgs": [
        "--max-line-length=115",
        // "--load-plugins",
        // "pylint_django",
        // "--django-settings-module",
        // "app.settings",
        "--rcfile",
        "${workspaceFolder/.pylintrc}",
        "--enable=W0614",
        "--disable=C0114,C0115,C0116"
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length=115"
    ],
    "python.formatting.blackArgs": [
        "--line-length",
        "115"
    ],
    "python.linting.flake8Args": [
        "--max-line-length=115",
        "--ignore=E402,F401,E302,E305,E501",
    ],
    "flake8.args": [
        "--max-line-length=115",
        "--ignore=E402,F401,E302,E305,E501",
    ],
    "python.linting.enabled": true,
    // "python.linting.pydocstyleEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.banditEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Path": "pyflakes",
    "python.linting.pycodestylePath": "pycodestyle",
    "python.linting.pycodestyleArgs": [
        "--max-line-length=115",
        "--ignore=E501,W503,E722",
        // "--disable=attribute-defined-outside-init,django-not-configured,signature-differs,C0115,C0116"
    ],
    "cSpell.words": [
        "fastapi",
    ]
}
